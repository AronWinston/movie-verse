<!-- User info-->
<section class="section">
  <div class="container">
    <h1 class="title">Profile</h1>
    <hr>
    <main>
    
   <div class="tile is-ancestor">
      <div class="tile is-4 is-parent">
        <div class="tile is-child box notification is-info">
            <p class="subtitle is-2">Favorite Movie</p>
            <p class="title is-1"><strong><%= @user.favorite_movie%></strong></p>
            
          <figure class="image is-3by4">
            <img src="<%= @response["Poster"] %>">
          </figure>
        </div>
      </div>
      <div class="tile is-vertical is-8">
        <div class="tile is-parent">
          <div class="tile is-child box notification is-info">
            <p class="subtitle is-5"><strong>Fullname</strong></p>
            <p class="title is-4"><%= @user.firstname %> <%= @user.lastname %></p>
          </div>
        </div>

        <div class="tile">
          <div class="tile is-parent"> 
            <div class="tile is-child box notification is-info">
            <p class="subtitle is-5">Age</p>
            <p class="title is-4"><strong><%= @user.age%></strong></p>
            </div>
          </div>
        </div>
    
        <div class="tile is-vertical">
            <div class="tile is-parent"> 
              <div class="tile is-child box notification is-info">
                <p class="subtitle is-5">Birthday</p>
              <p class="title is-4"><strong><%= @user.birthday%></strong></p>
              </div>
            </div>
        
        
    
          <div class="tile is-parent">
            <div class="tile is-child box notification is-info">
            <p class="subtitle is-5">Favorite Actor/Actress</strong></p>
            <p class="title is-4"><strong><%= @user.favorite_actor%></p>
            </div>
          </div>

          <div class="tile is-parent">
            <div class="tile is-child box notification is-info">
            <p class="subtitle is-5">Favorite Genre</strong></p>
            <p class="title is-4"><strong><%= @user.favorite_genre%></p>
            </div>
          </div>
      
        </div>
    
    </div>
    
    </main>
  </div>
</section>















<!-- Calendar with movie title & poster in the selected date-->
<%= month_calendar do |date| %>
  <%= date%>
  <br/>
  <% date_string = date.to_s%>
  <% @movies.each do |movie|%>
  <% setdate_string = movie.setdate.to_s%>
  <% if date_string == setdate_string%>
    <%= movie.movietitle%>
    <img src="<%=movie.movieposter%>">
    <%= link_to "remove from calendar", delete_path(id: movie.id), method: :delete %>
  <%end%>
<%end%>
<%end%>