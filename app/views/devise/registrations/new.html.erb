<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field ">
    <%= f.email_field :email, autofocus: true, placeholder: "E-mail" %><br />
  </div>

  <div class="field">
    
    <% if @minimum_password_length %>
    <h5> (<%= @minimum_password_length %> characters minimum)</h5>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation" %><br />
  </div>

    <div class="field">
    <%= f.text_field :firstname, autocomplete: "first name", placeholder: "First name" %><br />
    </div>

    <div class="field">
    <%= f.text_field :lastname, autocomplete: "last name", placeholder: "Last name" %><br />
    
  </div>

    <div class="field">
    <%= f.number_field :age, placeholder: "Age"%><br />
    
  </div>

    <div class="field">
    <%= f.label "Birthday"%><br/>
    <%= f.date_field :birthday, autocomplete: "birthday"%><br />
    
  </div>

    <div class="field">
    <%= f.text_field :favorite_movie, autocomplete: "favorite movie", placeholder: "Favorite Movie"%><br />
    
  </div>

    <div class="field">
    <%= f.text_field :favorite_actor, autocomplete: "favorite actor", placeholder: "Favorite Actor" %><br />
    
  </div>

    <div class="field">
    <%= f.text_field :favorite_genre, autocomplete: "favorite movie", placeholder: "Favorite Genre" %><br />
    
  </div>



  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
