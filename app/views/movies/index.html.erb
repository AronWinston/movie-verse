<ul>



<% if @response["Response"] == "True"%>
  <% @response["Search"].each do |moviearray| %>
    <% if moviearray["Type"] == "movie" && moviearray["Poster"] != "N/A"%>
      <%= link_to show_path(id: moviearray["imdbID"]) do %>
          <%= image_tag(moviearray["Poster"]) %> 
      <% end %>
    <% elsif moviearray["Poster"] == "N/A"%><br/>
      <%= link_to moviearray["Title"], show_path(id: moviearray["imdbID"])%> 
      <%end%>

  <%end%>
<%else%>
<center>

There is no movie matching with your search.

</center>
<%end%>
</ul>

