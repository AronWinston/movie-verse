<ul>
<% @response["Search"].each do |moviearray| %>
  <% if moviearray["Type"] == "movie" %>
    <% @movietitle = moviearray["Title"]%>
     <img src="<%=@movieposter = moviearray["Poster"]%>">
    <li>
    <%= link_to @movietitle, show_path(id: moviearray["imdbID"]) %>
    </li>
  <%end%>
<%end%>

</ul>

